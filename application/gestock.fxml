<AnchorPane prefHeight="800.0" prefWidth="1087.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.GestockController">

    <VBox alignment="CENTER" layoutX="230.0" layoutY="224.0" prefHeight="505.0" prefWidth="859.0" spacing="10" AnchorPane.leftAnchor="230.0" AnchorPane.rightAnchor="-2.0" AnchorPane.topAnchor="224.0">

        <HBox prefHeight="36.0" prefWidth="378.0" spacing="10" />

        <!-- Liste des stocks -->
        <ListView fx:id="stockListView" prefHeight="305.0" prefWidth="823.0" />

        <!-- Barre de notification -->
        <VBox fx:id="notificationBox" prefHeight="399.0" prefWidth="516.0" spacing="10" visible="false">
            <MenuBar>
                <Menu text="Notifications">
                    <MenuItem fx:id="notificationMenuItem" onAction="#afficherNotifications" text="Afficher les notifications" />
                </Menu>
            </MenuBar>

            <!-- Nouveau composant pour les notifications -->
            <VBox spacing="10">
                <ListView fx:id="notificationListView" prefHeight="300" prefWidth="300" />
                <HBox spacing="10">
                    <Button onAction="#validerCommande" text="Valider Commande" />
                    <Button onAction="#refuserCommande" text="Refuser Commande" />
                </HBox>
            </VBox>
        </VBox>

    </VBox>
   <VBox layoutX="1.0" prefHeight="213.0" prefWidth="1086.0" styleClass="left-form" stylesheets="@application.css">
      <children>
         <Label text="Bienvenue Gestionnaire du stock" textFill="WHITE">
            <font>
               <Font name="System Bold" size="17.0" />
            </font>
         </Label>
         <ImageView fitHeight="200.0" fitWidth="200.0">
            <image>
               <Image url="@stock.png" />
            </image>
         </ImageView>
      </children>
   </VBox>
   <VBox layoutY="230.0" prefHeight="571.0" prefWidth="230.0">
      <children>
         <Button mnemonicParsing="false" onAction="#refresh" prefHeight="30.0" prefWidth="172.0" text="Refresh">
            <padding>
               <Insets bottom="5.0" left="10.0" right="10.0" top="8.0" />
            </padding>
            <VBox.margin>
               <Insets bottom="10.0" left="20.0" top="10.0" />
            </VBox.margin>
         </Button>
            <Button onAction="#supprimerProduit" prefHeight="31.0" prefWidth="172.0" text="Supprimer Produit">
            <VBox.margin>
               <Insets bottom="10.0" left="20.0" top="10.0" />
            </VBox.margin></Button>
            <Button onAction="#ajouterProduit" prefHeight="31.0" prefWidth="172.0" text="Ajouter Produit">
            <VBox.margin>
               <Insets bottom="10.0" left="20.0" top="10.0" />
            </VBox.margin></Button>
           
           <!-- Bouton pour afficher les notifications -->
           <Button onAction="#afficherNotifications" prefHeight="31.0" prefWidth="172.0" text="Afficher les notifications">
            <VBox.margin>
               <Insets bottom="20.0" left="20.0" top="10.0" />
            </VBox.margin></Button>
         <ImageView fitHeight="282.0" fitWidth="228.0">
            <image>
               <Image url="@production.jpg" />
            </image>
         </ImageView>
         <Button fx:id="logoutButton" layoutX="30.0" layoutY="164.0" onAction="#logout" prefHeight="31.0" prefWidth="196.0" text="DÃ©connexion" textFill="RED">
