<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="711.0" prefWidth="878.0" styleClass="left-form" stylesheets="@application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.GestockController">

    <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">

        <HBox spacing="10">
            <Button onAction="#ajouterProduit" text="Ajouter Produit" />
            <Button onAction="#supprimerProduit" text="Supprimer Produit" />
        </HBox>

        <!-- Liste des stocks -->
        <ListView fx:id="stockListView" prefHeight="313.0" prefWidth="858.0" />

    </VBox>

     <!-- Barre de notification -->
     <MenuBar layoutX="10.0" layoutY="373.0" prefHeight="32.0" prefWidth="130.0">
         <Menu text="Notifications">
             <MenuItem fx:id="notificationMenuItem" text="Afficher les notifications" />
         </Menu>
     </MenuBar>

</AnchorPane>
