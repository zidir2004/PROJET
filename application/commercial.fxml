     <StackPane layoutX="213.0" layoutY="341.0" prefHeight="399.0" prefWidth="809.0">

         <!-- Barre de notification -->
         <VBox fx:id="notificationBox" alignment="CENTER" spacing="10" visible="false">
             <!-- Nouveau composant pour les notifications -->
             <VBox spacing="10">
                 <ListView fx:id="notificationListView" prefHeight="300" prefWidth="300" />
                 <HBox spacing="10">
                     <Button onAction="#validerCommande" text="réapprovisionnement d'urgence" />
                 </HBox>
             </VBox>
         </VBox>
     </StackPane>
      <Button layoutX="462.0" layoutY="209.0" onAction="#afficherNotifications" text="Afficher les notifications" />
      <Button layoutX="37.0" layoutY="305.0" onAction="#ajoutClient" prefHeight="31.0" prefWidth="158.0" text="Nouveau Client" />
   <Button layoutX="37.0" layoutY="257.0" mnemonicParsing="false" onAction="#AchatMatiere" prefHeight="31.0" prefWidth="158.0" text="Achat Matiére Premiéres" />
