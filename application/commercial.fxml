         <Label prefHeight="50.0" prefWidth="267.0" text="Commercial" textFill="WHITE">
            <font>
               <Font name="System Bold" size="22.0" />
            </font>
         </Label>
         <ImageView fitHeight="148.0" fitWidth="238.0">
            <image>
               <Image url="@commercial.jpg" />
            </image>
         </ImageView>
      </children>
   </VBox>
   <ImageView fitHeight="332.0" fitWidth="220.0" layoutX="2.0" layoutY="367.0">
      <image>
         <Image url="@production.jpg" />
      </image>
   </ImageView>
   <Button fx:id="logoutButton" layoutX="9.0" layoutY="722.0" onAction="#logout" prefHeight="37.0" prefWidth="194.0" text="Déconnexion" textFill="#f70101">
      <font>
         <Font name="Arial Bold" size="18.0" />
      </font>
   </Button>

</AnchorPane>
